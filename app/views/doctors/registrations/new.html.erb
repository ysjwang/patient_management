


<div class="row">
  <div class="col-md-12">
    <div class="well">

      <div class="form-horizontal">
        <h2>Sign up</h2>

        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <div class="col-md-5">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, :class => "form-control", :placeholder => "Doogie" %>
            <div class="clearfix"></div>
          </div>
        </div>


        <div class="form-group">

          <div class="col-md-5">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, :class => "form-control", :placeholder => "Howser" %>
            <div class="clearfix"></div>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-5">
            <%= f.label :email %><br />
            <%= f.email_field :email, :class => "form-control", :placeholder => "Doogie.Howser@email.com" %>
            <div class="clearfix"></div>
          </div>
        </div>


        <div class="form-group">
          <div class="col-md-5">
            <%= f.label :password %><br />
            <%= f.password_field :password, :class => "form-control" %>
            <div class="clearfix"></div>
          </div>
        </div>


        <div class="form-group">
          <div class="col-md-5">
            <%= f.label :password_confirmation, "Password Again" %><br />
            <%= f.password_field :password_confirmation, :class => "form-control" %>
            <div class="clearfix"></div>
          </div>
        </div>

        <div>
          <%= f.submit "Sign Up", :class => "btn btn-success"%>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>